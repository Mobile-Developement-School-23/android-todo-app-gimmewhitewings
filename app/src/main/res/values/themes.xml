        <item name="label_tertiary">@color/label_dark_tertiary</item>
        <item name="label_disable">@color/label_dark_disable</item>
        <item name="color_red">@color/color_dark_red</item>
        <item name="color_green">@color/color_dark_green</item>
        <item name="color_blue">@color/color_dark_blue</item>
        <item name="color_gray">@color/color_dark_gray</item>
        <item name="color_gray_light">@color/color_dark_gray_light</item>
        <item name="color_white">@color/color_dark_white</item>
        <item name="back_primary">@color/back_dark_primary</item>
        <item name="back_secondary">@color/back_dark_secondary</item>
        <item name="back_elevated">@color/back_dark_elevated</item>
